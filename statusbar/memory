#!/bin/sh

case $BLOCK_BUTTON in
	1) notify-send "ðŸ§  Memory hogs" "$(ps axch -o cmd:15,%mem --sort=-%mem | head)" ;;
	3) notify-send "ðŸ§  Memory module" "\- Shows Memory Used/Total.
- Click to show memory hogs." ;;
esac

mems=$(free | awk '/^Mem:/ {print $3 " " $2}')
used=$(echo $mems | awk '{print $1}')
total=$(echo $mems | awk '{print $2}')
#echo $used / $total
echo ðŸ’½$(( used * 100 / total ))"%"
